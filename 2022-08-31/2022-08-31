#capitalize



score = 0
fot = input ("vilket lag hejar på mohammed?").capitalize()

if fot == ("Real madrid"):
    print ("Helt rätt som fan")
    score +=3 
else: 
    print ("Fel tyvärr")

spelare = input ("vem är världens bästa spelare enligt mohammed?").capitalize()

if spelare == ("Benzema"):
    print ("Helt rätt")
    score += 3
else: 
    print ("Fel tyvärr")


mål = input("hur månmga mål har Benzema gjort under 2021/2022 säsong?")
if mål == ("100"):
    print ("helt rätt som faaaan")
    score +=3
else: print ("Fel tyvärr")


#score -= 5 
#score = score - 5 
